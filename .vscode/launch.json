{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rails Server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server",
                "-b",
                "0.0.0.0",
                "-p",
                "3000",
                "--pid",
                "tmp/pids/app.pid"
            ]
        }
    ]
}
